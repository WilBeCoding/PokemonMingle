extends layout

block content
  .flex-container
    .title
      h1=title
    .signup
      form.form-horizontal(action='/signup' method="POST")
        fieldset
          // Form Name
          legend Sign Up
          // Text input
          .form-group
            label.col-md-4.control-label(for='username') Username
            .col-md-8
              input#username.form-control.input-md(name='username', type='text', placeholder='Choose a username', required='')
          // Text input
          .form-group
            label.col-md-4.control-label(for='userage') Age
            .col-md-8
              input#userage.form-control.input-md(name='userage', type='text', placeholder='Your age', required='')
          // Select Basic
          .form-group
            label.col-md-4.control-label(for='usersex') Sex
            .col-md-8
              select#usersex.form-control(name='usersex')
                option(value='1') Male
                option(value='2') Female
                option(value='3') Other
          // Select Basic
          .form-group
            label.col-md-4.control-label(for='usercountry') Country
            .col-md-8
              select#usercountry.form-control(name='usercountry')
                option(value='1') United States
                option(value='2') Canada
          // Text input
          .form-group
            label.col-md-4.control-label(for='userzip') Zip Code
            .col-md-8
              input#userzip.form-control.input-md(name='userzip', type='text', placeholder='Zip code', required='')
          // Text input
          .form-group
            label.col-md-4.control-label(for='email') Email
            .col-md-8
              input#email.form-control.input-md(name='email', type='text', placeholder='Email Address', required='')
          // Text input
          .form-group
            label.col-md-4.control-label(for='emailconfirmation') Confirm Email
            .col-md-8
              input#emailconfirmation.form-control.input-md(name='emailconfirmation', type='text', placeholder='Confirm email address', required='')
          // Password input
          .form-group
            label.col-md-4.control-label(for='password') Password
            .col-md-8
              input#password.form-control.input-md(name='password', type='password', placeholder='Enter your password', required='')
          // Password input
          .form-group
            label.col-md-4.control-label(for='passwordconfirmation') Confirm Password
            .col-md-8
              input#passwordconfirmation.form-control.input-md(name='passwordconfirmation', type='password', placeholder='Confirm your password', required='')
          .buttonz
            input(type='submit' value="submit").btn.btn-primary
